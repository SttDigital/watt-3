{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/3.2.1.json",
  "watch": {
    "ignore": [
      "*.sqlite",
      "*.sqlite-journal"
    ]
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      "./routes"
    ]
  },
  "db": {
    "connectionString": "{PLT_LACKADAISICAL_SATOSHI_DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "schemalock": true
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": "{PLT_LACKADAISICAL_SATOSHI_APPLY_MIGRATIONS}"
  },
  "types": {
    "autogenerate": true
  }
}